{
  "openapi": "3.0.0",
  "info": {
    "title": "Animes API",
    "version": "1.0.0",
    "description": "A Api from animes"
  },
  "servers": [
    {
      "url": "http://localhost:3000/animes",
      "description": "DEV"
    },
    {
      "url": "",
      "description": "PROD"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "This endpoint return all animes in database",
        "tags": ["Animes"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/anime"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "summary": "This endpoint return a unique anime finded by id",
        "tags": ["Animes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id the Anime to be finded",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/anime"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create": {
      "post": {
        "summary": "This endpoint the anime has been created",
        "tags": ["Animes"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/anime"
              },
              "examples": {
                "anime": {
                  "value": {
                    "title": "Bleach",
                    "protagonist": "Ichigo",
                    "gender": "Shounem",
                    "year": 2006,
                    "characters": [
                      {
                        "name": "Urahara",
                        "lastName": "Kisuke",
                        "skill": "Bankai",
                        "age": "501",
                        "gender": "male"
                      }
                    ]
                  }
                }
              },
              "responses": {
                "400": {
                  "description": "Bad request"
                },
                "201": {
                  "description": "Anime Created",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "$ref": "#/components/schemas/anime"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/update": {
      "put": {
        "summary": "This endpoint return the anime updated",
        "tags": ["Animes"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#components/schemas/anime"
              },
              "examples": {
                "anime": {
                  "value": {
                    "id": "29060c40-1cf1-11ed-861d-0242ac120002",
                    "title": "Bleach",
                    "protagonist": "Ichigo",
                    "gender": "Shounem",
                    "year": 2006,
                    "characters": [
                      {
                        "name": "Urahara",
                        "lastName": "Kisuke",
                        "skill": "Bankai",
                        "age": "501",
                        "gender": "male"
                      }
                    ]
                  }
                }
              },
              "responses": {
                "400": {
                  "description": "Bad request"
                },
                "200": {
                  "description": "Anime Updated",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "$ref": "#components/schemas/anime"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/delete/{id}": {
      "delete": {
        "summary": "This endpoint return a deleted anime finded by id",
        "tags": ["Animes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id the Anime to be deleted",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#components/schemas/anime"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "anime": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "protagonist": { "type": "string" },
          "gender": { "type": "string" },
          "year": { "type": "number" },
          "characters": {
            "type": "array",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "lastName": { "type": "string" },
              "skill": { "type": "string" },
              "age": { "type": "number" },
              "gender": { "type": "string" }
            }
          },
          "createdAt": { "type": "string" }
        }
      }
    }
  }
}
